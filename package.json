{
  "name": "transdimensional-audio-workstation",
  "version": "0.0.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "node build/main.js",
    "dev_start": "babel-node src/main.js",
    "debug_start": "babel-node debug src/main.js",
    "build": "babel src --out-dir build",
    "watch": "babel src --watch --out-dir build --source-maps",
    "serialportlist": "serialportlist",
    "push_sounds_to_tawpi": "rsync -rvt ./sounds/ tawpi:projects/taw/sounds",
    "push_sounds_to_tawpi2": "rsync -rvt ./sounds/ pi@tawpi2.local:taw/sounds",
    "build_docs": "rm -f docs/*.svg && plantuml -tsvg docs/*.puml",
    "watch_docs": "npm-watch",
    "push_docs": "rsync --delete --exclude '*~.skp' --exclude '*.swp' -rvt docs/ awakeningio@awakening.io:taw.awakening.io/docs/",
    "test_animation": "node build/testAnimation.js",
    "fadecandy_start": "./git_modules/fadecandy/bin/fcserver-osx ./fcconfig.json",
    "test_fadecandy_config": "babel-node src/testFadecandyConfig.js"
  },
  "watch": {
    "build_docs": {
      "patterns": [
        "docs"
      ],
      "extensions": "puml"
    }
  },
  "author": "Colin Sullivan <colin@colin-sullivan.net>",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.3.15",
    "babel-core": "^6.3.15",
    "babel-preset-es2015": "^6.3.13",
    "moment": "^2.10.6",
    "node-osc": "^1.1.0",
    "opc": "^1.1.3",
    "redux": "^3.0.4",
    "serialport": "^3.1.2",
    "supercolliderjs": "^0.14.1",
    "underscore": "^1.8.3"
  },
  "babel": {
    "ignore": [
      "node_modules/*"
    ],
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "eslint": "^2.11.1",
    "npm-watch": "^0.1.8"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "browser": false,
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 1,
      "no-use-before-define": "error",
      "block-scoped-var": "error"
    }
  }
}
